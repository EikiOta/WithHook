datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id       String        @id @default(cuid())
  nickname      String?
  profile_image String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // 追加: リレーションフィールド
  meanings    Meaning[]
  memoryHooks MemoryHook[]

  @@map("users")
}

model Word {
  word_id    Int     @id @default(autoincrement())
  word       String  @unique
  is_deleted Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  meanings     Meaning[]
  memory_hooks MemoryHook[]

  @@map("words")
}

model Meaning {
  meaning_id Int      @id @default(autoincrement())
  word_id    Int
  user_id    String
  meaning    String
  is_public  Boolean  @default(false)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // リレーション
  word Word @relation(fields: [word_id], references: [word_id])
  user User @relation(fields: [user_id], references: [user_id])

  @@map("meanings")
}

model MemoryHook {
  memory_hook_id Int      @id @default(autoincrement())
  word_id        Int
  user_id        String
  memory_hook    String
  is_public      Boolean  @default(false)
  is_deleted     Boolean  @default(false)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  // リレーション
  word Word @relation(fields: [word_id], references: [word_id])
  user User @relation(fields: [user_id], references: [user_id])

  @@map("memory_hooks")
}
